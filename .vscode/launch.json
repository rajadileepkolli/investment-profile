{
    "configurations": [
        {
            "name": "Launch UI in Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "java",
            "name": "Spring Boot-ApiGatewayApplication<api-gateway>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "com.zakura.apigateway.ApiGatewayApplication",
            "projectName": "api-gateway",
            "args": ""
        },
        {
            "type": "java",
            "name": "Spring Boot-EurekaServiceApplication<discovery-service>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "com.zakura.discoveryservice.EurekaServiceApplication",
            "projectName": "discovery-service",
            "args": ""
        },
        {
            "type": "java",
            "name": "Spring Boot-PortfolioServiceApplication<portfolio-service>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "com.zakura.portfolioservice.PortfolioServiceApplication",
            "projectName": "portfolio-service",
            "args": ""
        },
        {
            "type": "java",
            "name": "Spring Boot-StockServiceApplication<stock-service>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "mainClass": "com.zakura.stockservice.StockServiceApplication",
            "projectName": "stock-service",
            "args": ""
        },
        {
            "type": "java",
            "name": "Spring Boot-TestSipServiceApplication<sip-service>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "com.example.sipservice.TestSipServiceApplication",
            "projectName": "sip-service",
            "args": "",
            "envFile": "${workspaceFolder}/.env",
            "vmArgs": " -Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=38755 -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Dspring.jmx.enabled=true -Djava.rmi.server.hostname=localhost -Dspring.application.admin.enabled=true -Dspring.boot.project.name=sip-service"
        },
        {
            "type": "java",
            "name": "Spring Boot-SipServiceApplication<sip-service>",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "mainClass": "com.example.sipservice.SipServiceApplication",
            "projectName": "sip-service",
            "args": "",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
